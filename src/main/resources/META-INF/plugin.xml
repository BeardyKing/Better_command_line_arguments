<idea-plugin>
    <id>com.github.beardyking.bettercommandlineargs</id>
    <name>better_command_line_args Template</name>
    <vendor>beardyking</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="com.github.beardyking.simpleclargs.toolWindow.CLArgumentsToolWindow" id="CLArgs"/>
    </extensions>

    <actions>
