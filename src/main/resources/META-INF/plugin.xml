        <action id="com.github.beardyking.simpleclargs.actions.CLArgsActionsMoveDown"
                class="com.github.beardyking.simpleclargs.actions.CLArgsActionsMoveDown" text="CLArgs_MoveDown"
                description="Move selected CLArgs down">
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl DOWN"/>
        </action>
        <action id="com.github.beardyking.simpleclargs.actions.CLArgsActionsMoveUp"
                class="com.github.beardyking.simpleclargs.actions.CLArgsActionsMoveUp" text="CLArgs_MoveUp"
